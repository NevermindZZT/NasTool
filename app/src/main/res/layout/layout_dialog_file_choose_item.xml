<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="com.letter.nastool.data.local.FileChooseInfo" />
        <import type="com.letter.nastool.adapter.OnItemViewClick" />

        <variable
            name="item"
            type="FileChooseInfo" />
        <variable
            name="position"
            type="int" />
        <variable
            name="onItemViewClick"
            type="OnItemViewClick" />
    </data>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:drawableTint="@color/appBarFrontColor"
        android:drawablePadding="8dp"
        android:text="@{item.name}"
        android:drawableStart="@{item.isDirectory ? @drawable/ic_dialog_file_choose_dir : @drawable/ic_dialog_file_choose_file}"
        android:onClick="@{view -> onItemViewClick.onClick(position, view)}"
        tools:text="Pictures"
        tools:drawableStart="@drawable/ic_dialog_file_choose_dir"/>
</layout>